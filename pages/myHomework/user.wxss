/**user.wxss**/
#body {
	background-color: #ffffff;
}
.hw-msg-icon{
	position: relative;
}
.hw-msg-icon-img {
	width: 72px;
	height: 65px;
	text-align: center;
	line-height: 72px;
	background-color: #FAC644;
	border-radius: 10px;
	margin-top: 43px;
	margin-left: 25px;
}
.hw-msg-icon-img image {
	width: 24px;
	height: 24px;
}
.hw-msg-des {
	margin:16px 0 0 30px;
}
.hw-msg-num {
	position: absolute;
	left: 80px;
	bottom: 30px;
	width: 20px;
	height: 20px;
	text-align: center;
	line-height: 20px;
	font-size: 10px;
	background-color: red;
	color: #ffffff;
	border-radius: 20px;
}

/* 作业list */
.hw-list {
	margin-top: 20px;
	border-radius: 20px 20px 0px 0px;
	box-shadow: 0px -5px 11px -8px rgba(0, 0, 0, 0.51);
	padding-top: 25px;
}
.hw-list-nav {
	display: flex;
	flex-direction:row; 
	flex-wrap: nowrap; 
}
.hw-list-nav-bar {
	width: 33%;
	text-align: center;
}
.hw-list-nav-bar-span {
	display: inline-block;
	width: 90%;
	background-color: #FAC644;
	height: 28px;
	line-height: 28px;
	border-radius: 10px;
}
.hw-list-line {
	display: flex;
	flex-direction:row; 
	flex-wrap: nowrap; 
	padding: 5px;
	border: 1px solid rgba(187, 187, 187, 100);
	margin: 15px;
}
.hw-list-line-img,.hw-list-line-img image {
	width: 87px;
	height: 87px;
}
.hw-list-type {
	display: flex;
	flex-direction:row; 
	flex-wrap: nowrap; 
}
.hw-list-line-des {
	padding-left: 20px;
	font-size: 16px;
}
.hw-list-type-icon, .hw-list-type-icon image {
	width: 20px;
	height: 20px;
	margin-right: 10px;
}
.hw-list-proj {
	color: #101010;
	font-size: 13px;
}
.hw-list-date {
	margin-top: 20px;
	color: #797979;
	font-size: 12px;
}
/**user.wxss**/
#body {
	height: 100vh;
	background-color: #fafafa;
}


#myLike {
	width: 50%;
	font-size: 36rpx;
	font-weight: bolder;
	padding-top: 26rpx;
	padding-left: 38rpx;
	z-index: 9;
}

#myLike_hr {
	width: 210rpx;
	height: 24rpx;
	background: linear-gradient(315deg, rgba(255, 255, 255, 0) 0%, rgba(255, 242, 158, 0.3) 10%, #FFE065 80%);
	margin-top: -25rpx;
	z-index: 1;
}


#part_1 {
	width: 750rpx;
	height: 232rpx;
	background-color: #fff;
	display: flex;
}










#listBox {

	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.list-item {
	width: 750rpx;
	background-color: #fff;
	border-radius: 16rpx;
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.12);
	margin-bottom: 20rpx;
	display: flex;

}

.list-item-pic {
	flex: 0 0 192rpx;
	height: 192rpx;
	border-radius: 16rpx;
	margin: 20rpx;
}

.list-item-content {
	flex: 0 0 370rpx;
	margin: 26rpx;
}

.list-item-title {
	width: 400rpx;
	height: 40rpx;
	font-size: 28rpx;
	font-weight: 500;
	color: #333;
	margin-top: 10rpx;
	margin-bottom: 12rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.list-item-detail {
	width: 400rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #6E7586;

	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;

}

.list-item-tips {
	width: 100%;
	font-size: 24rpx;
	font-weight: 400;
	color: #6E7586;
	margin-top: 20rpx;
	display: flex;
	justify-content: space-between;
}

.item-chakan {
	font-size: 22rpx;
	color: #B3B6CB;

}

#part_2 {
	/* background-color: #fff; */
	min-height: 500rpx;
	border-radius: 24rpx 24rpx 0 0;
	/* box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.12); */
	padding: 62rpx;
	margin-top: 22rpx;
}


.step {
	width: 100%;
	padding: 36rpx 16rpx;
	border-left: 2px dotted #B3B6CB;
}

.step::before {
	content: ' ';
	position: absolute;
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
	background: #FF9F00;
	margin-top: 15rpx;
	margin-left: -25rpx;
}


#part_3 {
	width: 750rpx;
	height: 128rpx;
	background-color: #fff;
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.2);
	position: fixed;
	bottom: 0px;
	z-index: 99;
}



#alertBg {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0px;
	z-index: 9999;
	background-color: rgba(0, 0, 0, 0.4);
}

#alertBox {
	width: 750rpx;
	position: absolute;
	bottom: 0px;
	padding: 60rpx;
	padding-bottom: 80rpx;
	border-radius: 60rpx  60rpx 0 0;
	overflow: hidden;
	background-color: #fff;
	min-height: 70%;
	box-shadow: 0 0 15px 5px #ccc;
	box-sizing: border-box;
}

.alertPic {
	width: 750rpx;
	height: 500rpx;
	/* border-radius: 20rpx; */
}

#videoBtn{
	width: 100rpx;
    height: 100rpx;
    position: relative;
    left: 460rpx;
    margin-top: -120rpx;
    z-index: 9999;
}

#alertContent {

}

#alertTitle {
	font-size: 36rpx;
	font-weight: 700;
	color: #333333;
	line-height: 32rpx;
}
#alertDetail {
	font-size: 32rpx;
	font-weight: 700;
	color: #333333;
	line-height: 32rpx;
}
#alertStepNum {
	margin-top: 12rpx;
	margin-bottom: 40rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #6E7586;
	line-height: 34rpx;
	letter-spacing: 1rpx;
	max-height: 150rpx;
	overflow-y: scroll;
}

.weight {
	font-weight: 700;
	margin-left: 25rpx;
}

.weight::before {
	content: ' ';
	position: absolute;
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
	background: #FF9F00;
	margin-top: 15rpx;
	margin-left: -25rpx;
}

#alertMubiao {
	font-size: 22rpx;
	color: #333333;
	line-height: 36rpx;
	margin-bottom: 24rpx;
}

#alertGongju {
	font-size: 22rpx;
	color: #333333;
	line-height: 36rpx;
}

#alertBtn {

	flex: 0 0 150rpx;
	height: 110rpx;
	margin-left: 30rpx;
	background-color: #FFE065;
	border-radius: 30rpx;
	text-align: center;
	line-height: 110rpx;
	font-weight: 700;

}
#bottomView{
	width: 630rpx;
	margin-top: 20rpx;
	display: flex;
	justify-content: space-between;
	position: absolute;
    bottom: 100rpx;
}
#work_btn {
	flex: 0 0 450rpx;
	height: 110rpx;
	border: 3rpx solid #bbb;
	border-radius: 30rpx;
	text-align: center;
	line-height: 110rpx;
	font-weight: 700;

}

#work_img {
	width: 54rpx;
	height: 48rpx;
	vertical-align: sub;
	margin-left: 20rpx;
}

#yueke_btn{
	flex: 0 0 100rpx;
	height: 110rpx;
	background-color: #FFE065;
	border-radius: 20rpx;
	text-align: center;
	font-size: 25rpx;
	font-weight: bolder;
}
#yueke_img{
	width: 50rpx;
	height: 50rpx;
	margin-top: 10rpx;
}

#label_txt::after {
	content: attr(data-label);
	font-size: 20rpx;
	width: 50rpx;
	height: 50rpx;
	line-height: 50rpx;
	border-radius: 50%;
	text-align: center;
	position: absolute;
	background-color: #FA5151;
	color: #fff;
	margin-left: 100rpx;
}

.workBtn {
	width: 430rpx;
	height: 110rpx;
	margin: 30rpx 160rpx;
	border-radius: 55rpx;
	background: linear-gradient(220deg, #FFF29E 0%, #FFE065 100%);
	font-size: 32rpx;
	font-weight: 700;
	text-align: center;
	line-height: 110rpx;
	position: fixed;
	bottom: 0px;
}
.content {
	padding: 40rpx;
	box-sizing: border-box;
}

.img-select {
	display: flex;
	justify-content: space-between;
	align-items: flex-end;
}

.img-select .img {
	width: 488rpx;
	height: 300rpx;
	background-color: #ccc;
}

.img-select .txt {
	border: solid 1rpx #ccc;
	padding: 5rpx 20rpx;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 20rpx;
}

.input-box {}

.input-box .input {
	margin-top: 20rpx;
	border-radius: 20rpx;
	padding: 0 20rpx;
	line-height: 90rpx;
	height: 90rpx;
	border: solid 1rpx #ccc;
}

.line {
	width: 100%;
	height: 1px;
	background-color: #b2b2b2;
	margin-top: 10rpx;
	margin-bottom: 10rpx;
}

.title-box {}

.title-box .title{
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}

.title-box .desc-txt {
	background-color: #fac644;
	border-radius: 40rpx;
	width: 154rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
}

.size-list-box {}

.size-list-box .txt{
	margin-top: 20rpx;
	margin-bottom: 40rpx;
}

.size-list-box .size-list {
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}

.size-list-box .select-btn {
	width: 200rpx;
	margin-bottom: 20rpx;
	border: solid 1rpx #ccc;
	border-radius: 40rpx;
	text-align: center;
	line-height: 50rpx;
	height: 50rpx;
}

.size-list-box .active {
	background-color: #fac644;
}

.upload-btn{
	font-weight: 700;
	font-size: 20px;
	width: 400rpx;
	margin: 0 auto;
	border-radius: 40rpx;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	background-color: #fac644;
	margin-top: 40rpx;
}
/**user.wxss**/
page{
	width: 100%;
	height: 100%;
}
#body {
	height: 100%;
	background-color: #fafafa;
}

#part_0 {
	width: 686rpx;
	height: 164rpx;
	margin: 0 32rpx;
	background: linear-gradient(37deg, #FFFFFF 60%, #FFE065 100%);
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.12);
	border-radius: 32rpx 32rpx 0 0;
	display: flex;
}

#avatarBox {
	height: 100%;
	flex: 0 0 160rpx;
	height: 100%;
}

#avatarPic {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	position: relative;
	display: block;
	top: 38rpx;
	left: 40rpx;
}

#nickNameBox {
	flex: 1 1 200rpx;
	height: 100%;
}

#nickName {
	font-size: 36rpx;
	font-weight: bolder;
	margin-top: 46rpx;
}

#phoneNumber {
	font-size: 24rpx;
}
#logoPic{
	width: 106rpx;
	height: 20rpx;
	top: 36rpx;
	right: 60rpx;
	position: relative;
}

#part_1 {
	width: 750rpx;
	height: 88rpx;
	background-color: #fff;
	/* display: flex; */
	/* flex-wrap: nowrap; */
	white-space: nowrap;
}

.flex-item {
	/* flex: 0 0 100rpx; */
	width: 200rpx;
	/* height: 88rpx; */
	margin: 22rpx 10rpx;
	font-size: 26rpx;
	font-weight: 500;
	line-height: 40rpx;
	display: inline-block;
	overflow: hidden;
	text-overflow: ellipsis;
	text-align: center;
}

.flex-item-active {
	font-size: 40rpx;
}

#flex-line {
	width: 54rpx;
	height: 8rpx;
	background: #FFE065;
	border-radius: 4rpx;
	position: absolute;
	margin-top: -14rpx;
	margin-left: 73rpx;
	/* animation: name duration timing-function delay iteration-count direction fill-mode; */
}

#allBox{
	padding-left: 72rpx;
}








#part_2 {
	background-color: #fff;
	width: 750rpx;
	min-height: calc(100% - 350rpx );
	border-radius: 24rpx 24rpx 0 0;
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.12);
	padding-bottom: 200rpx;
	margin-top: 22rpx;
}


#listBox {
	display: flex;
	flex-wrap: wrap;
	padding: 0 32rpx;
	margin-top: 40rpx;
	justify-content: space-between;
}

.list-item {
	width: 686rpx;
	background-color: #fff;
	border-radius: 16rpx;
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.12);
	margin-bottom: 20rpx;
	display: flex;
}

.list-item-pic {
	flex: 0 0 192rpx;
	height: 192rpx;
	border-radius: 16rpx;
	margin: 20rpx;
}
.list-item-content{
	flex: 0 0 370rpx;
	margin: 26rpx;
}
.list-item-title {
	width:400rpx;
	height: 40rpx;
	font-size: 28rpx;
	font-weight: 500;
	color:#333;
	margin-top: 10rpx;
	margin-bottom: 12rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}

.list-item-detail {
	width: 400rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #6E7586;

	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;

}
.list-item-tips{
	width: 100%;
	font-size: 24rpx;
	font-weight: 400;
	color: #6E7586;
	margin-top:20rpx;
	display: flex;
	justify-content: space-between;
}
.item-chakan{
	font-size: 22rpx;
	color:#B3B6CB;
	
}
.chakanTips::after{
	content: attr(data-alert);
	position: absolute;
	width: 25rpx;
	height: 25rpx;
	font-size: 18rpx;
	background-color:red;
	color:#fff;
	border-radius: 50%;
	text-align: center;
}
.item-expire{
	font-size: 22rpx;
	color:#FA5151;
}


#getMoreBox{
	width: 100%;
	min-height: 112rpx;
}
#getMoreBtn{
	width: 686rpx;
	height: 112rpx;
	margin:30rpx 32rpx;
}

#part_3 {
	width: 750rpx;
	height: 128rpx;
	background-color: #fff;
	box-shadow: 0px 4px 40px 0px rgba(102, 102, 102, 0.2);
	position: fixed;
	bottom: 0px;
	z-index: 99;
}

#sch_mine{
	width: 200rpx;
	height: 150rpx;
	border-radius: 20rpx;
	background-color: #FFE065;
	text-align: center;
	position: fixed;
	right: 20rpx;
	bottom: 50rpx;
}
#yueke_img{
	width: 60rpx;
	height: 60rpx;
	margin:20rpx 70rpx;
	margin-bottom: 5rpx;
}